<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <title><%= post.title %></title>
    <style>
        .post-actions {
            display: flex;
            gap: 10px;
            margin-bottom: 20px;
        }

        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
        }

        .modal-content {
            background-color: white;
            margin: 15% auto;
            padding: 20px;
            width: 70%;
            max-width: 700px;
            border-radius: 4px;
        }

        .modal form {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .modal textarea {
            min-height: 200px;
            padding: 10px;
        }

        .modal input {
            padding: 8px;
        }

        .close {
            float: right;
            cursor: pointer;
            font-size: 1.5rem;
        }

        .delete-btn {
            background-color: #333;
        }

        .delete-btn:hover {
            background-color: #333;
        }
    </style>
</head>
<body>
    <header>
        <div class="header-left">
            <h1>Julius Laux</h1>
            <a href="/create" class="create-post-btn">Create Post</a>
        </div>
    </header>
    
    <div class="container">
        <div class="sidebar">
            <ul class="post-list">
                <li class="post-item">
                    <a href="/">
                        ABOUT
                    </a>
                </li>
                <% Object.keys(posts).forEach(function(id) { %>
                    <li class="post-item">
                        <a href="/blog/<%= posts[id].slug %>" class="<%= posts[id].slug === post.slug ? 'current-page' : '' %>">
                            <%= posts[id].title.toUpperCase() %>
                        </a>
                    </li>
                <% }); %>
            </ul>
        </div>
        
        <div class="content">
            <% if (user) { %>
                <div class="post-actions">
                    <button onclick="openEditModal()" class="btn">Edit Post</button>
                    <form action="/blog/<%= post.slug %>/delete" method="POST" style="display: inline;">
                        <button type="submit" class="btn delete-btn" onclick="return confirm('Are you sure you want to delete this post?')">Delete Post</button>
                    </form>
                </div>
            <% } %>
            <h2 class="blog-title"><%= post.title %></h2>
            <article>
                <div class="post-content">
                    <p><%= post.content %></p>
                </div>
            </article>
        </div>
    </div>
    
    <div id="editModal" class="modal">
        <div class="modal-content">
            <span class="close" onclick="closeEditModal()">&times;</span>
            <h2>Edit Post</h2>
            <form action="/blog/<%= post.slug %>/edit" method="POST">
                <label for="title">Title:</label>
                <input type="text" id="title" name="title" value="<%= post.title %>" required>
                
                <label for="content">Content:</label>
                <textarea id="content" name="content" required><%= post.content %></textarea>
                
                <button type="submit" class="btn">Update Post</button>
            </form>
        </div>
    </div>

    <script>
        function openEditModal() {
            document.getElementById('editModal').style.display = 'block';
        }

        function closeEditModal() {
            document.getElementById('editModal').style.display = 'none';
        }

        window.onclick = function(event) {
            const modal = document.getElementById('editModal');
            if (event.target == modal) {
                modal.style.display = 'none';
            }
        }
    </script>

    <footer>
        <p>Â© <%= new Date().getFullYear() %> Julius Laux</p>
    </footer>
</body>
</html>